#include <iostream>
#include <string>

std::string get_middle( const std::string &s )
{
	std::string::size_type i, j;

	j = s.length();
	i = j % 2 == 0;
	j /= 2;

	return ( s.substr( j - i, i + 1 ) );
}
int main()
{
    std::string a;
    std::cin>>a;
    std::cout << get_middle(a) << std::endl;
    return 0;
}
